{
    "templates": {
      "html_source": {
        "schema_extraccion": {
          "campos": {
            "titulo": {
              "selector": ".evento-titulo",
              "tipo": "text",
              "requerido": true
            },
            "fecha": {
              "selector": ".evento-fecha", 
              "tipo": "date",
              "formato": "%d/%m/%Y",
              "requerido": true
            },
            "precio": {
              "selector": ".evento-precio",
              "tipo": "text",
              "default": "Gratis"
            },
            "ubicacion": {
              "selector": ".evento-lugar",
              "tipo": "text"
            },
            "descripcion": {
              "selector": ".evento-descripcion",
              "tipo": "text"
            }
          },
          "filtros": {
            "precio_maximo": 15,
            "palabras_clave": ["mayores", "senior", "tercera edad"],
            "excluir_palabras": ["ni帽os", "infantil", "beb茅"]
          }
        },
        "mapeo_campos": {
          "titulo": "titulo",
          "fecha": "fecha_inicio", 
          "precio": "precio",
          "ubicacion": "ubicacion",
          "descripcion": "descripcion"
        },
        "configuracion_scraping": {
          "wait_for_selector": ".eventos-container",
          "scroll_to_bottom": false,
          "timeout": 30000,
          "headers": {
            "User-Agent": "Mozilla/5.0 (compatible; EventBot/1.0)"
          }
        }
      },
      
      "pdf_source": {
        "schema_extraccion": {
          "campos": {
            "titulo": {
              "pattern": "(?i)^(.+?)(?=\\s*-\\s*\\d|\\s*\\.|$)",
              "tipo": "text",
              "requerido": true
            },
            "fecha": {
              "pattern": "\\d{1,2}[/-]\\d{1,2}[/-]\\d{4}",
              "tipo": "date",
              "formato": "%d/%m/%Y",
              "requerido": true
            },
            "precio": {
              "pattern": "(?:gratis|gratuito|\\d+[\\s]*euros?)",
              "tipo": "text",
              "default": "Gratis"
            }
          },
          "filtros": {
            "precio_maximo": 15,
            "palabras_clave": ["mayores", "senior"]
          }
        },
        "mapeo_campos": {
          "titulo": "titulo",
          "fecha": "fecha_inicio",
          "precio": "precio"
        },
        "configuracion_scraping": {
          "ocr_enabled": true,
          "language": "spa",
          "dpi": 300
        }
      }
    },
  
